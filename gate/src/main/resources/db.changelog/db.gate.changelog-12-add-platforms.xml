    <changeSet author="osouley" id="addplatform">
        <createTable tableName="platform">
            <column autoIncrement="true" name="id" startWith="56" type="INTEGER">
                <constraints nullable="false" primaryKey="true" primaryKeyName="platform_pkey"/>
            </column>
            <column name="url" type="VARCHAR(255)"/>
            <column name="platformid" type="VARCHAR(255)"/>
            <column name="communication_type" type="VARCHAR(255)"/>
            <column name="clientid" type="VARCHAR(255)"/>
            <column name="createddate" type="TIMESTAMP WITHOUT TIME ZONE">
                <constraints nullable="false"/>
            </column>
            <column name="lastmodifieddate" type="TIMESTAMP WITHOUT TIME ZONE">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
