server:
  port: 8080
spring:
  application:
    name: {{ spring.application.name }}
  main:
    banner-mode: off
  output:
    ansi:
      enabled: always
  security:
    oauth2:
      resourceserver:
        jwt:
          issuer-uri: {{ spring.security.oauth2.resourceserver.jwt.issuer_uri}}
  servlet:
    multipart:
      max-file-size: 5MB
      max-request-size: 5MB

gate:
  minSleep: {{ gate.minSleep }}
  maxSleep: {{ gate.maxSleep }}
  owner: {{ gate.owner }}
  cda_path: {{ gate.cda_path }}
  gate: {{ gate.gate }}
  ap:
    url: {{ gate.ap.url }}
    username: {{ gate.ap.username }}
    password: {{ gate.ap.password }}

mock:
  badRequestPercentage: {{ mock.badRequestPercentage}}
  gaussWaitingTime:
    average: {{ mock.gaussWaitingTime.average }}
    standardDeviation: {{ mock.gaussWaitingTime.standardDeviation }}
    isActiveForIdentifierRequestTimer: {{ mock.gaussWaitingTime.isActiveForIdentifierRequestTimer }}
    isTimerActiveForIdentifierResponse: {{ mock.gaussWaitingTime.isTimerActiveForIdentifierResponse }}
  identifierReponseGoodResponse:
    description: {{ mock.identifierReponseGoodResponse.description }}
    status: {{ mock.identifierReponseGoodResponse.status }}
  identifierReponseBadResponse:
    description: {{ mock.identifierReponseBadResponse.description }}
    status: {{ mock.identifierReponseBadResponse.status }}

management:
  endpoint:
    info:
      enabled: true
    health:
      enabled: true
      probes:
        enabled: true
    metrics:
      enabled: true
  endpoints:
    enabled-by-default: false
    web:
      exposure:
        include: info,health,metrics

feign-gate:
  name: {{ feign-gate.name }}
  url: {{ feign-gate.url }}
  keycloak: {{ feign-gate.keycloak }}
  clientid: {{ feign-gate.clientid }}
  clientsecret: {{ feign-gate.clientsecret }}
